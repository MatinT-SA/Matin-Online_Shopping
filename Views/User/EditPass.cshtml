@model Sourceiran_MVC.Models.Domains.Tbl_User

@{
    ViewBag.Title = "ویرایش رمز عبور";
    Layout = "~/Views/Shared/_Index.cshtml";
}


<div class="container padding-top-20 ">

    @Html.Partial("P_Profile")
    <div class="page account-page change-password-page">
        <div class="page-title text-center ">
            <h4>حساب کاربری من - تغییر کلمه عبور</h4>
        </div>
        <div class="divider divider-center divider-color nomargin-top margin-bottom-20">
            <i class="fa fa-chevron-down"></i>
        </div>
        <div class="page-body">

            <div class="form-horizontal ">
                <div class="form-group">
                    <div class="inputs">
                        <div class="col-md-2 padding-top-10 ">
                            <label for="OldPassword">کلمه عبور قدیمی:</label>
                        </div>
                        <div class="col-md-6">
                            <label class="input margin-bottom-10">
                                <i class="ico-append fa fa-user"></i>
                                <input class="text-box single-line password" data-val="true" data-val-required="کلمه عبور قدیمی مورد نیاز است." id="OldPassword" name="OldPassword" value="" type="password">
                            </label>
                        </div>
                        <div class="col-md-3 nopadding-right padding-top-10 red">
                            <span class="required">*</span>
                            <span class="field-validation-valid" data-valmsg-for="OldPassword" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="inputs">
                        <div class="col-md-2 padding-top-10 ">
                            <label for="NewPassword">کلمه عبور جدید:</label>
                        </div>
                        <div class="col-md-6">
                            <label class="input margin-bottom-10">
                                <i class="ico-append fa fa-user"></i>
                                <input class="text-box single-line password" data-val="true" data-val-length="کلمه عبور حداقل باید شامل 5 کاراکتر باشد." data-val-length-max="999" data-val-length-min="5" data-val-required="کلمه عبور جدید مورد نیاز است." id="NewPassword" name="NewPassword" value="" type="password">
                            </label>
                        </div>
                        <div class="col-md-3 nopadding-right padding-top-10 red">
                            <span class="required">*</span>
                            <span class="field-validation-valid" data-valmsg-for="NewPassword" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="inputs">
                        <div class="col-md-2 padding-top-10 ">
                            <label for="ConfirmNewPassword">تکرار کلمه عبور:</label>
                        </div>
                        <div class="col-md-6">
                            <label class="input margin-bottom-10">
                                <i class="ico-append fa fa-user"></i>
                                <input class="text-box single-line password" data-val="true" data-val-equalto="کلمه عبور وارد شده همخوانی ندارد." data-val-equalto-other="*.NewPassword" data-val-required="کلمه عبور مورد نیاز است." id="ConfirmNewPassword" name="ConfirmNewPassword" value="" type="password">
                            </label>
                        </div>
                        <div class="col-md-3 nopadding-right padding-top-10 red">
                            <span class="required">*</span>
                            <span class="field-validation-valid" data-valmsg-for="ConfirmNewPassword" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="buttons col-md-2 col-md-offset-2">
                        <input class="button-1 change-password-button btn btn-default btn-bordered" value="تغییر کلمه عبور" type="submit">
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>