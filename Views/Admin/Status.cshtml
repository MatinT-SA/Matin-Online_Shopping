@model IEnumerable<Sourceiran_MVC.Models.Domains.Tbl_Status>

@{
    ViewBag.Title = "وضعیت های ارسال";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="col-xs-12 col-sm-9 col-md-9 " style="float:left" id="mainContent">
    <script type="text/javascript" src="/Scripts/froala_editor.min.js"></script>
    <script type="text/javascript" src="/Scripts/langs/fa.js"></script>

    <div class="container-fluid" id="pjaxContainer">

        <h2>لیست وضعیت ارسال ها</h2>
        <hr />
        <div id="gridView">
            <div class="grid-mvc" data-lang="en" data-gridname="" data-selectable="true" data-multiplefilters="false">
                <div class="grid-wrap ">

                    <div style="@ViewBag.Style" class="@ViewBag.Class">
                        @if (ViewBag.Style != null)
                        {
                            <button type="button" class="close" data-dismiss="alert">×</button>
                        }

                        @Html.Raw(ViewBag.Message)
                    </div>
                    <p>
                        @Html.ActionLink(" ", "CreateStatus", "Admin", new { style = "" }, new { @class = "fa fa-plus-circle", @style = "color:green; font-size:25px;" })
                    </p>
                    <table class="table table-striped grid-table">
                        <tr>
                            <th class="grid-header">
                                عنوان وضعیت ارسال
                            </th>
                            <th class="grid-header">
                                ترتیب نمایش
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="grid-cell">
                                    @Html.DisplayFor(Model => item.Title)
                                </td>
                                <td class="grid-cell">
                                    @Html.DisplayFor(Model => item.Sort)
                                </td>

                                <td>
                                    @Html.ActionLink(" ", "EditStatus", new { id = item.ID }, new { @class = "fa fa-edit", @style = "color:green; font-size:18px;" }) |

                                    @Html.ActionLink(" ", "DeleteStatus", new { id = item.ID }, new { @class = "fa fa-trash", @style = "color:red; font-size:18px;", onclick = "return confirm('آیا از حذف این وضعیت ارسال مطمئن هستید؟');" })
                                </td>
                            </tr>
                        }

                    </table>
                    @Html.ActionLink("بازگشت", "Index", "Admin",new { }, new { @class = "btn btn-warning" })
                </div>
            </div>
        </div>
    </div>
</div>